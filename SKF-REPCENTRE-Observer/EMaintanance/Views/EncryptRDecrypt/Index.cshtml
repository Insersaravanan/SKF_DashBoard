@{
    ViewData["Title"] = "Encrypt Or Decrypt";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/lib/angular/ui-grid/ui-grid.min.css" rel="stylesheet" />
<link href="~/lib/angular/ui-select/select.min.css" rel="stylesheet" />
<div ng-controller="skfCtrl" class="language content-wrapper">
    <div class="container-fluid" id="languages">
        <div class="row heading-wrapper">
            <div class="col-md-3 heading">
                <h4 class="page-header text-primary">Encrypt Or Decrypt </h4>
            </div>
            <div class="col-md-9 menu-button">
                <a ng-click="encryptdata()" title="Encrypt"><i class="fa fa-lock icon-filter "></i><span>Encrypt</span></a>
                <a ng-click="decryptdata()" title="Decrypt"> <i class="fa fa-unlock-alt icon-filter "></i><span>Decrypt</span></a>
                <a ng-click="clear()" title="Clear"><i class="fa fa-eraser icon-filter"></i><span>Clear</span></a>
                @*<a ng-click="copyToClipboardDecrypt(resultValue);" title="Copy"><i class="fa fa-clipboard icon-filter"></i><span>Copy</span></a>*@
            </div>
        </div>
        <form class="form-encrypt">
            <div class=" col-md-12">
                <div class="col-md-4 col-sm-6 input-field">
                    <label class="control-label">Enter Your Text:</label>
                    <div>
                        <input type="text" class="form-control" ng-model="encrypt.Data" />
                    </div>
                </div>
            </div>
            <br />
            <div class=" col-md-12">
                <div class="col-md-6 col-sm-6 input-field">
                    <label class="control-label">Result:</label>
                    <div>
                        <textarea class="form-control" name="Result" disabled>{{resultValue}}</textarea>
                    </div>
                    <div>
                        <a class="copy-encrpt" ng-click="copyToClipboard(resultValue);" title="Copy"><i class="fa fa-clipboard icon-filter"></i><span>Copy to Clipboard</span></a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    <environment include="Development">
        <script src="~/js/EncryptRDecrypt/index.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/EncryptRDecrypt/index.min.js" asp-append-version="true"></script>
    </environment>
}